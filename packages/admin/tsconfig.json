{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"outDir": "./types",
		"baseUrl": "src",
		"paths": {
			"@solid-admin/core": ["../core/src"],
			"@solid-admin/ui-daisy": ["../ui-daisy/src"],
			"@solid-admin/i18n-polyglot": ["../i18n-polyglot/src"],
		},
		"jsx": "preserve",
